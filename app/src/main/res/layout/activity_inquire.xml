<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search"
        android:textSize="17sp"
        android:padding="15dp"
        android:background="@drawable/spinner_theme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/spinnerCategory"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:drawableStart="@drawable/baseline_search_24"
        android:drawablePadding="5dp"/>

    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/category"
        android:spinnerMode="dropdown"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/editSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spinnerSavePlace"
        app:layout_constraintBottom_toTopOf="@id/searchButton"
        android:background="@drawable/spinner_theme"
        android:padding="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"/>

    <Spinner
        android:id="@+id/spinnerSavePlace"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/saved_place"
        android:spinnerMode="dropdown"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinnerCategory"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerCategory"
        app:layout_constraintStart_toEndOf="@+id/spinnerCategory"
        android:background="@drawable/spinner_theme"
        android:padding="15dp"
        android:layout_marginEnd="10dp"
        app:layout_goneMarginStart="5dp"/>

    <Button
        android:id="@+id/searchButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/spinnerSavePlace"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/app_button_theme"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:id="@+id/itemNotExistImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchButton"
        android:layout_margin="10dp"
        android:padding="70dp"
        android:src="@drawable/item_not_inquired"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/inquireRcView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchButton"
        android:layout_margin="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>