<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">


        <EditText
            android:id="@+id/editSearch"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="검색어를 입력하세요."
            android:background="@drawable/spinner_theme"
            />
        <TextView
            android:id="@+id/space1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text=" "
            android:textSize="20dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/food_spinner_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/food"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="식품종류"
                android:background="@drawable/back1"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/save"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="보관장소"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_food"
                android:layout_width="205dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:entries="@array/카테고리선택"
                android:spinnerMode="dropdown"></Spinner>

            <Spinner
                android:id="@+id/spinner_save"
                android:layout_width="205dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:entries="@array/보관장소"
                android:spinnerMode="dropdown"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="검색"
                android:background="@drawable/buttt"
                android:layout_gravity="end"/>

            <ListView
                android:id="@+id/listview"
                android:background="@drawable/back2"
                android:layout_width="410dp"
                android:layout_height="531dp"
                android:divider="#999999">

            </ListView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>