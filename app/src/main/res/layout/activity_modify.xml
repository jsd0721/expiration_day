<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="end"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/productNameEditText"
        android:id="@+id/productImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/food"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/productNameEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edit_textbox"
        android:hint="제품 이름"
        android:textSize="15sp"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/productImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/yearEditText"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>

    <EditText
        android:id="@+id/yearEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edit_textbox"
        android:textSize="15sp"
        android:hint="연"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/productNameEditText"
        app:layout_constraintEnd_toStartOf="@id/monthEdiText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/categoryText"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/monthEdiText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edit_textbox"
        android:textSize="15sp"
        android:hint="월"
        android:padding="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@+id/yearEditText"
        app:layout_constraintBottom_toBottomOf="@+id/yearEditText"
        app:layout_constraintStart_toEndOf="@+id/yearEditText"
        app:layout_constraintEnd_toStartOf="@id/dateEditText"/>

    <EditText
        android:id="@+id/dateEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edit_textbox"
        android:textSize="15sp"
        android:hint="일"
        android:padding="15dp"
        app:layout_constraintStart_toEndOf="@id/monthEdiText"
        app:layout_constraintTop_toTopOf="@id/monthEdiText"
        app:layout_constraintBottom_toBottomOf="@id/monthEdiText"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"/>


    <TextView
        android:id="@+id/categoryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/categorySpinner"
        app:layout_constraintTop_toBottomOf="@+id/yearEditText"
        app:layout_constraintBottom_toTopOf="@+id/savedPlaceText"/>

    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_theme"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/categoryText"
        app:layout_constraintBottom_toBottomOf="@id/categoryText"
        app:layout_constraintStart_toEndOf="@id/categoryText"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="40dp"
        />

    <TextView
        android:id="@+id/savedPlaceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보관장소"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/categoryText"
        app:layout_constraintStart_toStartOf="@id/categoryText"
        app:layout_constraintEnd_toStartOf="@id/savePlaceSpinner"
        app:layout_constraintBottom_toTopOf="@+id/button_cancel"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"/>

    <Spinner
        android:id="@+id/savePlaceSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_theme"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="@id/savedPlaceText"
        app:layout_constraintBottom_toBottomOf="@id/savedPlaceText"
        app:layout_constraintStart_toEndOf="@id/savedPlaceText"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"/>

    <Button
        android:id="@+id/button_mod"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="수정"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="@drawable/button_apply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_cancel"
        app:layout_constraintTop_toTopOf="@id/button_cancel"
        app:layout_constraintBottom_toBottomOf="@id/button_cancel"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="5dp"/>

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="@drawable/button_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_mod"
        app:layout_constraintTop_toBottomOf="@+id/savedPlaceText"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>